<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">@*so cel da ima touch zooming na mobilni telefoni koga go otvaraat sajtot*@
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("cssBelTehView", false)
    @RenderSection("css", false)
</head>
<body>
    <div id="divMeni">    
                <ul id="listaLevo">
                    <li>@Html.ActionLink("E-Prodavnica", "BelaTehnika", "Category", null, new { id = "eProdavnicaLink"})</li>
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("About", "About", "Home", null, new { id = "aboutLink" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { id = "contactLink" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
                 
    </div>
    <div >
        @*slider*@
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">            
            <div class="item active">
                <img src="~/Content/Images/slider_kosuli2_800_280.jpg" id="slika">
            </div>
            <div class="item">
                <img src="~/Content/Images/slider_casovnici2_800_280.jpg"  id="slika">
            </div>

            <div class="item">
                <img src="~/Content/Images/slider_printer_800_280.jpg" id="slika">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @*slider-end*@
        <div id="listaMeniLevo">
            <ul>
                <li>@Html.ActionLink("Bela Tehnika", "BelaTehnika", "Category", new { tipId = "1" }, new { @class = "belaTehLink" })</li>
                @*<li>@Html.ActionLink("Hrana", "Hrana", "Category", new { tipId = "2" }, null)</li>*@
                <li>@Html.ActionLink("Nakit", "Nakit", "Category", new { tipId = "3" }, new { id = "nakitLink" })</li>
                <li>@Html.ActionLink("Obleka", "Obleka", "Category", new { tipId = "4" }, new { id = "oblekaLink" })</li>
            </ul>
            
        </div>
        @RenderBody()
        <div id="divFooter">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            
            // Create the dropdown base
            $("<select />").appendTo("#listaMeniLevo");

            // Populate dropdown with menu items
            $("#listaMeniLevo a").each(function () {
                var el = $(this);
                if (el.text() === "Bela Tehnika") {
                    $("<option />", {
                        "selected" :"selected",
                        "value": el.attr("href"),
                        "text": el.text()
                    }).appendTo("#listaMeniLevo select");
                } else {
                    $("<option />", {
                        "value": el.attr("href"),
                        "text": el.text()
                    }).appendTo("#listaMeniLevo select");
                }
                
            });


            // To make dropdown actually work
            $("#listaMeniLevo select").change(function () {
                window.location = $(this).find("option:selected").val();
                
            });

        });
    </script>
</body>
</html>
